.imgClub {
  margin-top:100rpx;
  display:flex;
  justify-content: center;
}

.imgClub image {
  width:250rpx;
  height:270rpx;
}

.title {
  margin-top:30rpx;
  display:flex;
  justify-content: center;
  color: rgb(109, 104, 108);
  font-weight: 700;
}

.btnCheck {
  width:80%;
  margin-top:130rpx;
  background-color: rgb(106, 0, 95);
  color: white;
  border-radius: 98rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.btnImgCheck {
  margin-right: 8rpx;
  width: 46rpx;
  height: 46rpx;
}

.btnCheck::after {
  border-radius: 98rpx;
  border: 0; 
}

